{% extends "base.jinja2" %}
{% block title %}Cookbook{% endblock %}
{% block header %}Cookbook{% endblock %}
{% block content %}
    <div id="header">
        <div id="logo-small-container">
            <a href="/"><img id="logo-small" src="/static/logo.svg" alt="Cookbook"></a>
        </div>
        <div id="header-search">
            <form id="header-search-form" action="/search">
                <input id="header-search-bar" type="search" name="query" placeholder="Recipe name, tags, ...">
                <input type="submit" value="&#x1F50D;" hidden>
            </form>
        </div>
    </div>
    <hr id="divider">
    <div id="results">
        {% if not results %}
            No recipes found!
        {% else %}
            {% for recipe in results %}
                <div class="result">
                    <img class="result-image" src="/static/no-image.png">
                    <span class="result-name">{{ recipe.name }}</span>
                    <span class="result-description">{% if recipe.note %}{{ recipe.note }}{% endif %}</span>
                    <span class="result-tags">{{ recipe.tags|join(", ") }}</span>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}